<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kimhyojung.android.makecalculator.CalculatorMain">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/AC"
        android:layout_marginTop="99dp"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:background="#ff6200"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="÷"
        android:id="@+id/divide"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#cbcbcb"
        android:layout_alignTop="@+id/AC"
        android:layout_toRightOf="@+id/AC"
        android:layout_toEndOf="@+id/AC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×"
        android:id="@+id/Multiply"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#cbcbcb"
        android:layout_alignTop="@+id/divide"
        android:layout_toRightOf="@+id/divide"
        android:layout_toEndOf="@+id/divide" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/AC"
        android:layout_toLeftOf="@+id/divide"
        android:layout_toStartOf="@+id/divide"
        android:onClick="moveNum7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eight"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/divide"
        android:layout_alignLeft="@+id/divide"
        android:layout_alignStart="@+id/divide"
        android:onClick="moveNum8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nine"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/divide"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:onClick="moveNum9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/percent"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#cbcbcb"
        android:layout_below="@+id/Multiply"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="moveNum4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/eight"
        android:layout_toLeftOf="@+id/nine"
        android:layout_toStartOf="@+id/nine"
        android:onClick="moveNum5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/nine"
        android:layout_alignLeft="@+id/nine"
        android:layout_alignStart="@+id/nine"
        android:nestedScrollingEnabled="false"
        android:onClick="moveNum6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/subtraction"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#cbcbcb"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="moveNum1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/five"
        android:layout_toLeftOf="@+id/six"
        android:layout_toStartOf="@+id/six"
        android:onClick="moveNum2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/six"
        android:layout_alignLeft="@+id/six"
        android:layout_alignStart="@+id/six"
        android:onClick="moveNum3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/addition"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#cbcbcb"
        android:layout_alignTop="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zero"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/point"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/two"
        android:layout_toLeftOf="@+id/three"
        android:layout_toStartOf="@+id/three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="()"
        android:id="@+id/bracket"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/three"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/calculate"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#848484"
        android:layout_below="@+id/three"
        android:layout_toRightOf="@+id/bracket"
        android:layout_toEndOf="@+id/bracket" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/delete"
        android:textSize="50dp"
        android:textColor="#000000"
        android:background="#ff0000"
        android:layout_gravity="right"
        android:layout_above="@+id/nine"
        android:layout_toRightOf="@+id/Multiply"
        android:layout_toEndOf="@+id/Multiply" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/delete"
        android:layout_alignEnd="@+id/delete">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANSWER"
            android:id="@+id/answerbutton"
            android:textSize="50dp" />

    </LinearLayout>

</RelativeLayout>
